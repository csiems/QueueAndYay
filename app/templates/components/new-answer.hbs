{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author" required="true"}}
        </div>
        <div class="form-group">
          <label for="content">Your Answer</label>
          {{input class="long-form" value=content id="content" required="true"}}
        </div>
        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'answerFormShow'}}>Answer this question</button>
{{/if}}
