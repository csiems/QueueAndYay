{{#if updateFormShow}}
<h1>Update Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Your Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="notes">Explanatory Notes (optional)</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>
      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateFormShow'}}>Update</button>
{{/if}}
