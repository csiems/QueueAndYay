{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author" required="true"}}
        </div>
        <div class="form-group">
          <label for="content">Your Question</label>
          {{input class="long-form" value=content id="content" required="true"}}
        </div>
        <div class="form-group">
          <label for="notes">Explanatory Notes (optional)</label>
          {{input class="long-form" value=notes id="notes"}}
        </div>
        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
